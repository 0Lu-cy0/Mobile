{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "moduleResolution": "node"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "expo-env.d.ts",
    ".expo/types/**/*.ts",
    "services/dataTask.js"
  ],
  "exclude": ["node_modules", "build"]
}
